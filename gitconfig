[alias]
	a = add
	br = branch
	ci = commit
	cl = clone
	co = checkout
	cp = cherry-pick
	d = "!f() { git diff --color "$1"^.."$1"; }; f"
	dlc = diff --cached HEAD^
	i = init
	gr = log --graph --color --pretty=format:"%C(yellow)%h\\ %Cblue%G?\\ %Cgreen%cr\\%Cred%d\\ %Creset%s%Cblue\\ [%cn]"
	le = log --oneline --decorate
	ll = log --pretty=format:"%C(yellow)%h\\ %Cblue%G?\\ %Cgreen%cr\\%Cred%d\\ %Creset%s\\ %Cblue\\ [%cn]" --decorate --numstat
	ls = log --pretty=format:"%C(yellow)%h\\ %Cblue%G?\\ %Cgreen%cr\\%Cred%d\\ %Creset%s\\ %Cblue\\ [%cn]" --decorate
	s = status --branch --short
