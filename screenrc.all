startup_message off

backtick 1 60 60 sh -c "acpi | awk '{ print \$4 * 1 \"%\"}'"
backtick 2 60 60 sh -c "acpi | awk '{ print substr(\$5, 0, 5) }'"

hardstatus alwayslastline '[%{= kw}%?%-Lw%?%{= kc}%n*%f %t%?%?%{= kw}%?%+Lw%?%?%= ] [%{= kc}%H%{= kw}] [%{c}%l %1` %2`%{w}]%{w} [%{c}%m/%d/%y %C:%s %A%{w}] '
defscrollback 5000

# 256 color xterm
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce "on"
term xterm-256color
bell_msg ""
vbell off
multiuser on
